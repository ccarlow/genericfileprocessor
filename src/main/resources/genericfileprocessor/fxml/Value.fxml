<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="genericfileprocessor.ui.controller.ValueController">
	<GridPane>
		<Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
		<TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
		
		<Label text="Value" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
		<TextField fx:id="value" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
		
		<Label text="Default" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
		<CheckBox fx:id="default" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
	</GridPane>
</VBox>